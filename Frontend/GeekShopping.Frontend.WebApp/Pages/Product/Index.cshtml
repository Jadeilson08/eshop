@page
@model GeekShopping.Frontend.WebApp.Pages.Product.Index
@{
}
<br />
<br />


<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Products List</h1>
        </div>

        <div class="col text-end pt-1">
            <a asp-page="./Create" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i> Create New Product
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>*</th>

            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.products)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-pencil"></i></a>
                         |
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>