@page "{id:long}"

@model GeekShopping.Frontend.WebApp.Pages.Product.Delete

<br />
<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Products Create</h1>
        </div>
    </div>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Product.Id"  />
        <div class="form-group">
            <label asp-for="Product.Name" class="control-label"></label>
            <input asp-for="Product.Name" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Product.Price" class="control-label"></label>
            <input asp-for="Product.Price" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Product.Description" class="control-label"></label>
            <input asp-for="Product.Description" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Product.CategoryName" class="control-label"></label>
            <input asp-for="Product.CategoryName" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Product.ImageURL" class="control-label"></label>
            <input asp-for="Product.ImageURL" class="form-control" disabled />
        </div>
        <div class="form-group mt-1">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </form>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }